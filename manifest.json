{
  "name": "Github Easy PR",
  "description": "Adds Approve button in Pull request comments",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "build/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "css": ["easy-pr.css"],
      "js": ["build/index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/main.js", "build/button.js", "build/approve.js"],
      "matches": ["https://*.github.com/*"]
    }
  ]
}
